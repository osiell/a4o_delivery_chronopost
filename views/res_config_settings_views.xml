<odoo>

    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.chronopost.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='ups']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="chronopost">
                    <div class="o_setting_left_pane">
                        <field name="module_a4o_delivery_chronopost"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_a4o_delivery_chronopost"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Chronopost
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <button name="%(delivery.action_delivery_carrier_form)d"
                                    icon="fa-arrow-right" type="action"
                                    string="Chronopost Delivery Methods"
                                    class="btn-link"
                                    context="{'search_default_delivery_type': 'chronopost'}"/>
                            </div>
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>


    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.delivery.chronopost.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='stock_delivery_ups']/parent::div/parent::div/parent::div/parent::div" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_a4o_delivery_chronopost"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_a4o_delivery_chronopost"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Chronopost
                        </div>
                        <div class="content-group">
                            <button name="%(delivery.action_delivery_carrier_form)d"
                                icon="fa-arrow-right" type="action"
                                string="Chronopost Delivery Methods"
                                class="btn-link" context="{'search_default_delivery_type': 'chronopost'}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
