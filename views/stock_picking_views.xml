<odoo>
    <record id="view_picking_withcarrier_out_form_chronopost" model="ir.ui.view">
        <field name="name">delivery.stock.picking_withcarrier.form.view.chronopost</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='carrier_data']/field[@name='carrier_id']" position="attributes">
                <attribute name="attrs">
                    {'readonly': ['|', ('state', 'in', ('cancel')), '&amp;', '&amp;', ('state', 'in', ('done')), ('carrier_tracking_ref','!=',False), ('delivery_type','!=',False)]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
